{
  "name": "showy",
  "version": "0.0.17",
  "description": "Ostentatious, canvas-based presentations",
  "main": "dist/showy.min.js",
  "webpack": "showy.webpack.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/homerjam/showy"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "watchify showy.js -vd -t babelify --presets es2015 -o dist/showy.js",
    "build:compile": "browserify showy.js -vd -t babelify --presets es2015 | exorcist dist/showy.js.map > dist/showy.js",
    "build:minify": "npm run build:compile; uglifyjs dist/showy.js -cm -o dist/showy.min.js --source-map dist/showy.min.js.map --in-source-map dist/showy.js.map",
    "build": "npm run build:compile; npm run build:minify",
    "webpack:production": "webpack -p --output-filename showy.pkgd.min.js",
    "dev": "webpack-dev-server --inline --open",
    "release": "npm run build; webpack; npm run webpack:production"
  },
  "author": "Homerjam <jameshomer85@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "eases": "^1.0.8",
    "gl-texture2d": "^2.1.0",
    "glsl-transition": "^1.0.2",
    "glsl-transitions": "^2017.4.19",
    "lodash": "^4.17.4",
    "pica": "^4.0.1"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "exorcist": "^1.0.0",
    "expose-loader": "^0.7.4",
    "uglifyjs": "^2.4.11",
    "watchify": "^3.9.0",
    "webpack": "^3.9.1",
    "webpack-dev-server": "^2.9.5"
  }
}
